@inject BarbieQ.Repositories.CategoriaRepository rep;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicon/favicon-16x16.png" />
    <link rel="manifest" href="~/img/favicon/site.webmanifest" />
    <link rel="stylesheet" href="~/norm.css" />
    <link rel="stylesheet" href="~/styles.css" />
    <title>BarbieQ Cosmetics</title>
</head>
<body>
    <p class="disclaimer">Envio gratis en pedidos arriba de $500</p>
    <nav id="navv">
        

        @foreach (var item in rep.GetAll().Select(x=> x.Nombre))
        {
           
            <a href="~/Home/VerCategoria/@(item.Replace(" ","-"))">
                <img alt="iconcito" class="nav-icon" src="~/img/nav/@(item).jpg" />
                <p>@item</p>
            </a>
        }

        <a href="~/Home" class="logo" id="pancho">
            <img alt="logo" class="logo" src="~/img/logo sin fondo.png" />
        </a>
        
      
    </nav>
    <script>
        const nav = document.getElementById("navv");
        var logo = document.getElementById("pancho")
        // var x = document.createElement("a");
        // var img = document.createElement("img");
        // img.alt = "logo";
        // img.className = "lg"


        var mitad = Math.floor(nav.childElementCount / 2);
        nav.insertBefore(logo, nav.children[mitad ]);
    </script>
    @RenderBody()
    <footer>
        <div class="enlaces">
            <h3>Enlaces Útiles</h3>
            <ul>
                <li><a href="#">Inicio</a></li>
                <li><a href="#">Productos</a></li>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Acerca de Nosotros</a></li>
            </ul>
        </div>

        <div class="enlaces">
            <h3>Categorías</h3>
            <ul>
                @foreach (var item in rep.GetAll().Select(x=>x.Nombre))
                {
                    <li><a href="~/Home/VerCategoria/@(item.Replace(" ","-"))">@item</a></li>
                }
                
                @* <li><a href="#">Cuidado de la Piel</a></li>
                <li><a href="#">Perfumes</a></li>
                <li><a href="#">Accesorios</a></li>
                <li><a href="#">Accesorios</a></li> *@
            </ul>
        </div>

        <div class="redes-sociales">
            <h3>Síguenos</h3>
            <ul>
                <li>
                    <a href="#" target="_blank">
                        <img src="~/img/sociales/facebook.png" alt="">
                        <p>Facebook</p>
                    </a>
                </li>
                <li>
                    <a href="#" target="_blank">
                        <img src="~/img/sociales/twitter.png" alt="">
                        <p>Twitter</p>
                    </a>
                </li>
                <li>
                    <a href="#" target="_blank">
                        <img src="~/img/sociales/instagram.png" alt="">
                        <p>Instagram</p>
                    </a>
                </li>
            </ul>
        </div>
    </footer>
</body>

</html>
